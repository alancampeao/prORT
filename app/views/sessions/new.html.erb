
  <div class="session-new">
    <h3>Fa√ßa login!</h3>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--6-col">
          <%= f.label :email, "Email", class:"mdl-textfield__label" %>
          <%= f.email_field :email, class:"mdl-textfield__input" %>
        </div>
        <br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--6-col">
          <%= f.label :password, "Senha", class:"mdl-textfield__label" %>
          <%= f.password_field :password, class:"mdl-textfield__input" %>
        </div>
        <br>
          <%= f.submit "Login", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
      <% end %>
  </div>