<div class="new-user">
    <% if @user.errors.any? %>
        <div id= "error_explanation">
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

        <h3>Cadastre-se</h3>

    <%= form_for @user do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--6-col"id="full_name">
            <%= f.label :full_name, "Nome completo", class:"mdl-textfield__label" %>
            <%= f.text_field :full_name, class:"mdl-textfield__input" %>
        </div>
        <br>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--6-col" id="email_new">
            <%= f.label :email, "Email", class:"mdl-textfield__label" %>
            <%= f.text_field :email, class:"mdl-textfield__input" %>
        </div>
        <br>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--6-col" id="password_new">
            <%= f.label :password,"Senha", class:"mdl-textfield__label" %>
            <%= f.password_field :password, class:"mdl-textfield__input" %>
        </div>
        <br>
        <div class="mdl-textfield mdl-js-textfield mdl-cell--6-col" id="password_confirm">
            <%= f.label :password_confirmation, "Confirme a senha", class:"mdl-textfield__label" %>
            <%= f.password_field :password_confirmation, class:"mdl-textfield__input" %>
        </div>
        <br>
      <%= f.submit "Cadastre-se", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    <% end %>
    </center>
</div>