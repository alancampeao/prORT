<% if @post.errors.any? %>
	<ul>
		<% @post.errors.full_messages.each do |error| %>
			<li><%= error %></li>	
		<% end %>
	</ul>
<% end %>


<h2>Novo post:</h2>

<%= form_for @post do |f| %>

	<p>
		<%= f.label :title, "TÃ­tulo do post" %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Escolha uma categoria para o post" } %>
	</p>

	<p>
		<%= f.label :content, "Escreva!" %> <br>
		<%= f.text_area :content %>
	</p>
	
	<p>
		<%= f.submit "Criar post" %>
	</p>

<% end %>

<p>
	<%= link_to "Todos os posts", posts_path %>|
	<%= link_to "Home", root_path %>
</p>